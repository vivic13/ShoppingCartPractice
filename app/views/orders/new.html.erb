<div class= "container text-center">
	<h2>購物清單</h2>
	<%= link_to '等一下再結帳，繼續購物', products_path, class:"btn-default" %>
	<hr>
</div>
<div class="container">
	<% current_cart.cart_products.each do |p| %>
	 <div class="col-md-6">
	 	<%= image_tag(p.product.image, class:"product2" )%>
	 </div>
	 <div class="col-md-6">
	    <%= p.product.name %> <br>
	    單價:NT$:<%= p.product.price %> <br>
			數量:<%= p.quantity %>
	    <%= link_to "減少1個", remove_product_path(p.product), :method => :post %>
		</div>
	<% end %>
	
</div>

<div class="container text-center">
<hr>		
<h2>訂單資訊</h2>

	<div>
		<% if @order.errors.present? %>
			<%= @order.errors.full_messages %>
		<% end %>
	</div>

<%= form_for @order do |f| %>

	
    <%= f.label :name %><br>
    <%= f.text_field :name%><br>

    <%= f.label :phone %><br>
    <%= f.text_field :phone %><br>

		<%= f.label :address %><br>
    <%= f.text_field :address %><br>
		
		<%= f.label :payment_method %><br>
    <%= f.select :payment_method, [ ["信用卡", "credit_card"], ["ATM轉帳", "atm"]] %><br>

    <%= f.label :shipping_method %><br>
    <%= f.select :shipping_method, [ ["宅配", "home_delivery"], ["超商取貨", "convenience_store"]] %><br>

		<%= f.submit class:"btn-default" %>

<% end %>

</div>

<style>
	.col-md-6{
		min-height: 300px;
		margin-bottom: 50px;
	}
</style>


