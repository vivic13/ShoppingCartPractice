	<div class="container cart text-center">
		<p >
			<%= link_to new_order_path(@order)  do%> 
					<i class="fa fa-shopping-cart fa-2x" aria-hidden="true"> <%= current_cart.total_quantity%> </i><small>個純產品</small>
					查看
			<% end %>
		</p>		
	</div>
	<div class="container">
		<% @products.each do |p| %>
			<div class="col-md-6">
				<div class="col-md-6">
						<%= image_tag(p.image, class:"product2")%>
				</div>
				<div class="col-md-6">
					<h3><%= p.name %></h3> 
			
					<p>NT$<%= p.price %></p>
					<% @p = p.id %>
					<button type="button" class="btn-info" data-toggle="modal" data-target="#<%= @p %>"><i class="fa fa-search-plus fa-2x" aria-hidden="true"></i></button>
					<div id ="<%= @p%>" class="modal fade myModal" role="dialog">
					  <div class="modal-dialog">
					    <!-- Modal content-->
					    <div class="modal-content">
					      <div class="modal-header">
					        <button type="button" class="close" data-dismiss="modal">&times;</button>
					        <h4 class="modal-title text-center"><%= p.name %></h4>
					        <p class="text-center">NT$<%= p.price %></p>
					      </div>
					      <div class="modal-body">
					      	<div class="container product-info">
					      	<div class="info">
					        <h4><%= p.description %> </h4>
					        </div>
					        <div class="info">
					        <p>化妝品字號 : <%= p.code %></p> 
									<p>容量: <%= p.volume %>/ <%= p.volume_type %></p>
									<p>原產地 : <%= p.location %></p>
									<p>到期日 : <%= p.expiry_date %></p>
									<p>使用說明 : <%= p.usage %></p>
									</div>
					        </div>
					      </div>
					    </div>

						  </div>
						</div>

				
						<%= link_to  add_to_cart_product_path(p), :method => :post, :id => "cart_total", :remote => true  do%>
						<i class="fa fa-cart-plus fa-2x" aria-hidden="true"></i>

						<% end %> 
					</div>
			</div>
		<% end %>
		<%=paginate @products%>
	</div>
